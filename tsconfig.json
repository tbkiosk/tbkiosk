{
  "extends": "@morphis-labs/tsconfig",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": ".",
    "paths": {
      "app/*": ["./app/*"],
      "components/*": ["./components/*"],
      "hooks/*": ["./hooks/*"],
      "lib/*": ["./lib/*"],
      "public/*": ["./public/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["node"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
